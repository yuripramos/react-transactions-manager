{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:import/warnings",
    "plugin:react/recommended"
  ],
  "globals": {
    "API_URL": true,
    "SECRET_KEY": true,
    "jest": true,
    "test": true,
    "expect": true,
    "describe": true,
    "it": true,
    "Headers": true,
    "window": true
  },
  "rules": {
    "react/jsx-no-bind": 0,
    "arrow-body-style": 0,
    "consistent-return": 0,
    "no-underscore-dangle": 0,
    "react/no-unescaped-entities": 0,
    "no-extra-boolean-cast": 0,
    "import/no-extraneous-dependencies": 0,
    "import/no-named-as-default": 0,
    "import/no-named-as-default-member": 0,
    "react/display-name": 0,
    "linebreak-style": 0,
    "quotes": 0,
    "react/require-extension": "off",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "max-len": [
      2,
      120,
      2,
      {
        "ignoreUrls": true
      }
    ]
  },
  "env": {
    "jasmine": true,
    "browser": true,
    "jest": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    }
  }
}
